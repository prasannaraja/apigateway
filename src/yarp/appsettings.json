{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "catalog-route",
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "catalog-api/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          }
        ]
      },
      {
        "RouteId": "order-route",
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "order-api/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          }
        ]
      },
      {
        "RouteId": "time-route",
        "ClusterId": "time-cluster",
        "Match": {
          "Path": "time-api/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          }
        ]
      }
    ],
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5001/api"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5002/api"
          }
        }
      },
      "time-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5003/api"
          }
        }
      }
    }
  }
}